shopt -s extglob

curdir=$(dirname "$(readlink -f "$0")")

function on_exit()
{
    set +e
}

function on_error()
{
    set +e
    echo Tests FAILED
    exit 1
}

function on_interrupt()
{
    echo Tests INTERRUPTED
}

trap 'on_error' ERR
trap 'on_interrupt' SIGINT
trap 'on_exit' EXIT

function run()
{
    local testexec=$1

    echo "Running $testexec test suite..."

    NVCV_LEAK_DETECTION=warn "$curdir/$testexec"
}
